[Unit]
Description=Process Notifier (pnotify)
After=graphical-session.target

[Service]
Type=simple
ExecStart=%h/.local/bin/pnotify -config %h/.config/pnotify/config.json
Restart=on-failure
RestartSec=5

# D-Bus session bus â€” standard path on modern systems (dbus-broker / dbus-daemon)
Environment=DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/%U/bus

[Install]
WantedBy=default.target
